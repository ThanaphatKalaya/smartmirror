<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

        <title>Smart Mirror</title>

        <link rel="stylesheet" href="/css/reveal.css">
        <link rel="stylesheet" href="/css/theme/night.css">

        <!-- Theme used for syntax highlighting of code -->
        <link rel="stylesheet" href="/lib/css/zenburn.css">
        
        <script>
            function startTime() {
                var date = new Date();
                var h = date.getHours();
                var m = date.getMinutes();
                var s = date.getSeconds();
                m = to2digits(m);
                s = to2digits(s);
                document.getElementById('time').innerHTML = h + ":" + m + ":" + s;
                document.getElementById("date").innerHTML = date.toDateString();
                var t = setTimeout(startTime, 1000);
            }
            function to2digits(i) {
                if (i < 10) {i = "0" + i};  // add zero in front of numbers < 10
                return i;
            }
        </script>
        <style type="text/css">
            .column {
                float: left;
                width: 50%;
            }
            .row:after {
                display: table;
                clear: both;
                width: 100%;
            }
        </style>
    </head>
    <body onload="startTime()" style="background-color: #000000">
        <div class="reveal">
            <div class="slides">
                <section style="height: 100%; padding-top: 25px">
                    <iframe
                        frameborder="0" width="100%" height="100%"
                        src="https://www.google.com/maps/embed/v1/directions?key=<%= dir_maps_api_key %>
                            &origin=<%= from_lat %>,<%= from_lng %>
                            &destination=<%= to_lat %>,<%= to_lng %>"
                        allowfullscreen>
                    </iframe>
                </section>
                <section style="height: 100%;">
                    <div class="row">
                        <div class="column" align="left">
                            <iframe
                                frameborder="0" width="200px" height="600px"
                                src="/weather.html"
                                allowfullscreen>
                            </iframe>
                        </div>
                        <div class="column" align="right">
                            <div id="time" style="font-size: 120%;"></div>
                            <div id="date" style="font-size: 50%;"></div>
                        </div>
                    </div>
                </section>
                <section style="width: 100%;">
                    <div id="news_data" style="text-align: center;width: 90%;margin-left: auto;margin-right: auto;">
                        Loading...
                    </div>
                </section>
                <section style="height: 100%; padding-top: 25px">
                    <iframe
                        data-autoplay
                        frameborder="0" width="40%" height="40%"
                        src="https://www.youtube.com/embed/gbbJ9eB4Ae8"
                        allowfullscreen>
                    </iframe>
                </section>
            </div>
        </div>

        <script src="/lib/js/head.min.js"></script>
        <script src="/js/reveal.js"></script>

        <script>
            // More info about config & dependencies:
            // - https://github.com/hakimel/reveal.js#configuration
            // - https://github.com/hakimel/reveal.js#dependencies
            Reveal.initialize({
                dependencies: [
                    { src: 'plugin/markdown/marked.js' },
                    { src: 'plugin/markdown/markdown.js' },
                    { src: 'plugin/notes/notes.js', async: true },
                    { src: 'plugin/highlight/highlight.js', async: true, callback: function() { hljs.initHighlightingOnLoad(); } }
                ],
                width: "100%",
                height: "100%",
                margin: 0,
                controls: false,
                progress: false,
                loop: false
            });

            Reveal.addEventListener( 'ready', function( event ) {
                Reveal.slide(1, 1); //go to slide horizontal / vertical
            } );

            document.onkeydown = function (e) {
                var keyCode = e.keyCode;
                if(keyCode == 66) { //b
                    Reveal.slide(1, 1);
                }
            };

            function get_news() {
                var xhttp;
                xhttp=new XMLHttpRequest();
                xhttp.onreadystatechange = function() {
                    if (this.readyState == 4 && this.status == 200) {
                        var res = JSON.parse(xhttp.response);
                        <% if ( news_category !== "all" ) { %>
                            var data = "<h3>News : <%= news_category %></h3><ul>";
                        <% } else { %>
                            var data = "<h3>News</h3><ul>";
                        <% } %>
                        for(i in res.articles){
                            data = data + '<li style="font-size: 70%"><b>' + (res.articles[i].title) + '</b></li><table style="margin: 0;"><tr><td><img src="' + (res.articles[i].urlToImage) + '" height="100" style="margin-right:25px;float:left"><p style="font-size: 50%">' + (res.articles[i].description) + "</p></td></tr></table>";
                        }
                        var element = document.getElementById("news_data");
                        element.innerHTML = data + "</ul>";
                    }
                };
                <% if ( news_category !== "all" ) { %>
                    xhttp.open("GET", "https://newsapi.org/v2/top-headlines?country=th&category=<%= news_category %>&pageSize=5&apiKey=<%= newsapi_key %>", true);
                <% } else { %>
                    xhttp.open("GET", "https://newsapi.org/v2/top-headlines?country=th&pageSize=5&apiKey=<%= newsapi_key %>", true);
                <% } %>
                xhttp.send();
            }
            get_news();
        </script>
    </body>
</html>
